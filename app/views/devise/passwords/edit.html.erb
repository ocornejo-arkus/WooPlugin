<div class="row justify-content-md-center">
  <div class="col-md-6">
    <div class="card mt-3">
      <div class="card-body">
          <h3 class="title">
            Change your password
          </h3>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group row">
              <%= f.label :password, "New password", class: "col-sm-3 col-form-label" %><br />
              
              <div class="col-sm-9">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, "Confirm new password", class: "col-sm-3 col-form-label" %><br />
              <div class="col-sm-9">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class: "btn btn-block btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>

